<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/almost_white">

    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginLeft="@dimen/pic_marginleft"
        android:layout_marginTop="@dimen/pic_margintop"
        android:src="@mipmap/pic_default"
        android:elevation="10dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/layout_marginleft"
        android:layout_marginTop="@dimen/layout_margintop"
        android:layout_toRightOf="@id/iv_pic"
        android:orientation="vertical">

        <TextView
            android:id="@+id/newstitle_TextView"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新闻标题测试哈哈哈哈哈哈哈哈"
            android:textColor="@color/little_black"
            android:scaleType="centerCrop"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/content_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="新闻标题测试哈哈哈哈哈哈哈哈"
            android:textColor="@color/gray"
            android:textSize="12sp" />
    </LinearLayout>
</RelativeLayout>
